<div class="container">
  <div class="row">
    <div class="col-md-12">
      <h1> Animals </h1>
      <table class="table table-hover animal-list">
        <thead>
          <tr>
            <th>name</th>
          </tr>
        </thead>
        <tbody>
          <% @tags.each do |t| %>
          <tr>
            <td><%= link_to t.name, t %></td>
            <td><%= link_to raw("<i class=\"glyphicon glyphicon-trash\"></i>"), tag_path(t), :method => :delete, data:{confirm: "Are you sure? There are #{t.animals.length} animals using it!"}, :class=>"btn btn-danger" %></td>
          </tr>
          <% end %>
        </tbody>
      </table>
      <%= link_to "Add a new tag!", new_tag_path, :class=>"btn btn-primary" %>
    </div>
  </div>
</div>
