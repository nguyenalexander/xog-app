<div class="container">
  <div class="row">
    <div class="col-md-12">
      <h1> Animals </h1>
      <table class="table table-hover animal-list">
        <thead>
          <tr>
            <th>name</th>
            <th>description</th>
            <th>species</th>
          </tr>
        </thead>
        <tbody>
          <% @animals.each do |a| %>
          <tr>
            <td><%= link_to a.name, a %></td>
            <td><%= a.desc %></td>
            <td><%= a.species %></td>
          </tr>
          <% end %>
        </tbody>
      </table>
      <%= link_to "Add a new Animal!", new_animal_path, :class=>"btn btn-primary" %>
    </div>
  </div>
</div>
