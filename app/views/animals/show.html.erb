<div class="container">
  <div class="row">
    <div class="col-md-12">
      <h1> <%=@animal.name%> - <%=@animal.species%>
      <small>
      <%= link_to raw("<i class=\"glyphicon glyphicon-pencil\"></i>"), edit_animal_path(@animal), :class=> "btn btn-info"%>
      <%= link_to raw("<i class=\"glyphicon glyphicon-trash\"></i>"), animal_path(@animal), :method => :delete, data:{confirm: "Are you sure?"}, :class=>"btn btn-danger" %>
      </small></h1>
      <h2> <%=@animal.desc%></h2>
    </div>
  </div>
</div>